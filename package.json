{
  "name": "express-setup",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "build": "tsc --build && npm run copy-files",
    "copy-files": "copyfiles -u 1 src/config/**/* dist/ && cp package.json dist/package.json && cp -r ./node_modules ./dist/",
    "test": "mocha ./tests/*",
    "dev-old": "cross-env NODE_ENV=development tsc-watch --onSuccess \"node ./dist/src/server.js\"",
    "dev": "dotenvx run --env-file=./config/.env.development -- tsc-watch --onSuccess \"node ./dist/src/server.js\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.21",
    "body-parser": "^1.20.2",
    "express": "^4.18.3",
    "express-actuator": "^1.8.4",
    "express-flash": "0.0.2",
    "express-handlebars": "^7.1.2",
    "express-session": "^1.18.0",
    "express-validator": "^7.0.1",
    "http-status-codes": "^2.3.0",
    "mocha": "^10.3.0",
    "nodemon": "^3.1.0",
    "pg": "^8.11.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "ts-node": "^10.9.2",
    "tsc": "^2.0.4",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.4.2",
    "winston": "^3.12.0"
  },
  "devDependencies": {
    "@types/express-actuator": "^1.8.3",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-standard": "^4.1.0"
  }
